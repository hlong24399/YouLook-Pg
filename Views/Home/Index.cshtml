<div class="callback-form">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Request a <em>call back</em></h2>
                    <span>Let us know if you have any questions about YouLook, Inc</span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="contact-form">
                    <form enctype="multipart/form-data" id="contact" asp-action="Sendmail" method="post">
                        <div class="row">
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <fieldset>
                                    <label asp-for="Name"></label>
                                    <input name="name" type="text" class="form-control" id="name" placeholder="Full Name" required="">
                                </fieldset>
                            </div>
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <fieldset>
                                    <label asp-for="Email"></label>
                                    <input name="email" type="text" class="form-control" id="email" pattern="[^ @@]*@@[^ @@]*" placeholder="E-Mail Address" required="">
                                </fieldset>
                            </div>
                            <div class="col-lg-4 col-md-12 col-sm-12">
                                <fieldset>
                                    <label asp-for="Subject"></label>
                                    <input name="subject" type="text" class="form-control" id="subject" placeholder="Subject" required="">
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <label asp-for="Message"></label>
                                    <textarea name="message" rows="6" class="form-control" id="message" placeholder="Your Message" required=""></textarea>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <label asp-for="FormFile" hidden="hidden"></label>
                                    <input type="file" asp-for="FormFile" accept=".png, .jpg, .pdf, .epub" id="real-button" hidden="hidden" />
                                    <span asp-validation-for="FormFile" hidden></span>
                                    <button type="button" id="custom-button" class="border-button"> Upload your resume </button>
                                    <p id="custom-text">No file has been chosen.</p>
                                </fieldset>
                            </div>
                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="border-button">Send Message</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

